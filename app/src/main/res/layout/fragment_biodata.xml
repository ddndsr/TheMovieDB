<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/profile_pictures"
        android:scaleType="centerCrop"
        android:contentDescription="@string/profile_picture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.ImageView.Circle"
        app:strokeColor="@color/white"
        app:strokeWidth="4dp" />

    <TableLayout
        android:id="@+id/profile_info_table"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="Nama:"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Deden Deswari"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_weight="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="NIM:"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/profile_nim"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="2310031802083"
                android:layout_weight="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="Kelas:"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/profile_class"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="Pemrograman Mobile II"
                android:layout_weight="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="Jurusan:"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/profile_major"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="Teknik Informatika"
                android:layout_weight="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="Universitas:"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/profile_university"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="Universitas Sains dan Teknologi Indonesia"
                android:layout_weight="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text=""
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/profile_origina"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="Indonesia"
                android:layout_weight="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="Asal:"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/profile_origin"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="Kamparkiri, Riau"
                android:layout_weight="2" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
